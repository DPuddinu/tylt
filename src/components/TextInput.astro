---
type Props = {
  id: string;
  name: string;
  value?: string;
  placeholder: string;
  variant?: '100' | '200' | '300' | 'default';
};
const { name, value, placeholder, id, variant = 'default' } = Astro.props;
let selectedVariant = '';
switch (variant) {
  case '100':
    selectedVariant = 'bg-base-100';
    break;
  case '200':
    selectedVariant = 'bg-base-200';
    break;
  case '300':
    selectedVariant = 'bg-base-300';
    break;
  default:
    break;
}
---

<input
  id={id}
  name={name}
  maxlength={40}
  value={value}
  placeholder={placeholder}
  type='text'
  required
  class:list={[{ selectedVariant }]}
  class='textarea input-bordered max-h-28 w-full truncate text-pretty rounded-lg px-2 py-1 text-xl font-bold'
/>
