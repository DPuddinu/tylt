---
type Props = {
  HTMLFor: string;
  label: string;
  className?: string;
};
const { label, HTMLFor, className } = Astro.props;
---

<div class={`flex flex-col gap-2 w-full ${className}`}>
  <div class='flex justify-between'>
    <label for={HTMLFor}>{label}</label>
    <slot name='label' />
  </div>
  <slot />
</div>
