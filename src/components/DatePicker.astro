---
type Props = {
  name: string;
  required?: boolean;
  value?: Date | null;
  min?: Date;
};
const { name, required = false, value, min } = Astro.props;

export function getInputDateString(date: Date) {
  return date.toISOString().slice(0, 10);
}
---

<input
  placeholder='mm/dd/yyyy'
  required={required}
  type='date'
  id={name}
  name={name}
  value={value ? getInputDateString(value) : undefined}
  min={min ? getInputDateString(min) : undefined}
  class='select-bordered w-full rounded-lg border bg-base-100 px-4 py-2 font-semibold hover:cursor-pointer'
/>
